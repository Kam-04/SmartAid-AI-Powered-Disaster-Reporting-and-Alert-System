<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.MapsActivity">

    <!-- 1️⃣ Map fragment takes the full screen -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 2️⃣ Legend overlay, drawn *after* the map so it floats on top -->
    <LinearLayout
        android:id="@+id/legendContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#CCFFFFFF"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp">

        <!-- Earthquake Zone -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="16dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#FF0000" />

            <TextView
                android:id="@+id/earthquakeLegend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Earthquake Zone"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Flood Zone -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="16dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/legend_circle_blue" />

            <TextView
                android:id="@+id/floodLegend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Flood Zone"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Weather Marker -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_baseline_place_24"
                app:tint="#00BFFF" />

            <TextView
                android:id="@+id/weatherLegend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Weather (Heavy Rain)"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- You Are Here (User Location) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_baseline_place_24"
                app:tint="#00FF00" />

            <TextView
                android:id="@+id/locationLegend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="You are here"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
